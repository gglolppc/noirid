+          <tr class="border-t border-white/5 align-top">
+            <td class="px-4 py-3">{{ payment.id }}</td>
+            <td class="px-4 py-3">{{ payment.order_id }}</td>
+            <td class="px-4 py-3">{{ payment.provider }}</td>
+            <td class="px-4 py-3">{{ payment.status }}</td>
+            <td class="px-4 py-3">{{ payment.amount }} {{ payment.currency }}</td>
+            <td class="px-4 py-3">{{ payment.provider_order_number or "—" }}</td>
+            <td class="px-4 py-3">{{ payment.provider_invoice_id or "—" }}</td>
+            <td class="px-4 py-3">{{ payment.created_at }}</td>
+            <td class="px-4 py-3">{{ payment.provider_message_type or "—" }}</td>
+            <td class="px-4 py-3">{{ payment.provider_order_status or "—" }}</td>
+            <td class="px-4 py-3">{{ payment.provider_invoice_status or "—" }}</td>
+            <td class="px-4 py-3">{{ payment.provider_approve_status or "—" }}</td>
+            <td class="px-4 py-3 max-w-sm">
